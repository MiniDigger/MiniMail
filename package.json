{
  "name": "minimail",
  "author": "MiniDigger",
  "description": "A mail client, just for me.",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "previewBuild": "bun --bun run build && bun --bun run preview",
    "postinstall": "nuxt prepare",
    "lint": "bun run lint:eslint && bun run lint:prettier",
    "lint:eslint": "eslint --config .config/eslint.config.mjs . --fix",
    "lint:prettier": "prettier --ignore-path .config/.prettierignore --ignore-path .gitignore --write --list-different .",
    "lint:typecheck": "nuxt typecheck"
  },
  "dependencies": {
    "@clerk/vue": "1.16.2",
    "@compodium/nuxt": "0.1.0-beta.12",
    "@iconify-json/lucide": "1.2.74",
    "@iconify-json/mdi": "1.2.3",
    "@iconify-json/simple-icons": "1.2.59",
    "@nuxt/eslint": "1.10.0",
    "@nuxt/kit": "4.2.1",
    "@nuxt/ui": "4.2.1",
    "@types/nodemailer": "7.0.4",
    "@types/web-push": "3.6.4",
    "@vite-pwa/assets-generator": "1.0.2",
    "@vite-pwa/nuxt": "1.0.7",
    "@vueuse/core": "14.0.0",
    "community-jazz-vue": "0.19.3",
    "eslint": "9.39.1",
    "hookable": "5.5.3",
    "imapflow": "1.1.1",
    "jazz-tools": "0.19.3",
    "nodemailer": "7.0.10",
    "nuxt": "4.2.1",
    "prettier": "3.6.2",
    "sass-embedded": "1.93.3",
    "tailwindcss": "4.1.17",
    "typescript": "5.9.3",
    "vue": "3.5.24",
    "vue-router": "4.6.3",
    "web-push": "3.6.7"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "printWidth": 120,
    "tabWidth": 2,
    "trailingComma": "es5",
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}
